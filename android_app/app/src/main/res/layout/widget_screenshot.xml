<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="4dp"
    android:background="@drawable/widget_background">

    <!-- 状态图片 (当状态为"有"时显示) -->
    <ImageView
        android:id="@+id/widget_status_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/status_image"
        android:visibility="gone"
        android:scaleType="fitCenter" />

    <!-- 时间显示区域 -->
    <LinearLayout
        android:id="@+id/widget_time_display_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="visible">

        <!-- PC X个 显示在同一行 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/widget_pc_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PC"
                android:textSize="10sp"
                android:maxLines="1"
                android:textColor="#FF0000"
                android:textStyle="bold"
                android:gravity="center"
                android:visibility="visible"
                android:includeFontPadding="false"
                android:padding="0dp" />

            <TextView
                android:id="@+id/widget_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12-5"
                android:textSize="9sp"
                android:maxLines="1"
                android:textColor="#333333"
                android:textStyle="bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:padding="0dp" />

            <TextView
                android:id="@+id/widget_hour_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="9sp"
                android:maxLines="1"
                android:textColor="#FF0000"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="0dp"
                android:includeFontPadding="false" />

            <TextView
                android:id="@+id/widget_minute_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":10"
                android:textSize="7sp"
                android:maxLines="1"
                android:textColor="#333333"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="0dp"
                android:includeFontPadding="false" />
        </LinearLayout>

        <!-- 最后更新时间 -->
        <TextView
            android:id="@+id/widget_update_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:text="测试时间"
            android:textSize="7sp"
            android:maxLines="2"
            android:textColor="#333333"
            android:textStyle="normal"
            android:gravity="center"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>
